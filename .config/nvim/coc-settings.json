{
  "colors.filetypes": ["*"],
  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/14.0.3/clangd_14.0.3/bin/clangd",
  "explorer.root.customRules": {
    "vcs": {
      "patterns": [".git", ".hg", ".projections.json"]
    },
    "vcs-r": {
      "patterns": [".git", ".hg", ".projections.json"],
      "bottomUp": true
    }
  },
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        ".stack.yaml",
        ".hie-bios",
        "BUILD.bazel",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ]
    }
  },
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": "content",
  "explorer.quitOnOpen": true,
  "explorer.previewAction.content.maxHeight": 40,
  "explorer.trash.command": "trash-put %l",
  "explorer.file.reveal.whenOpen": true  
}
